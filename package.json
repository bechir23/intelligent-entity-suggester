{
  "name": "ahmed_project_upwork",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd server && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "tsc -b && vite build",
    "build:backend": "cd server && npm run build",
    "lint": "eslint . && cd server && npm run lint",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "docker:up": "docker-compose -f docker-compose.simple.yml up -d",
    "docker:down": "docker-compose -f docker-compose.simple.yml down",
    "docker:logs": "docker-compose -f docker-compose.simple.yml logs -f",
    "setup": "npm install && cd server && npm install",
    "start": "npm run docker:up",
    "setup-db": "echo 'Please run the setup-database.sql script in your Supabase SQL editor'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "@tiptap/pm": "^3.0.7",
    "@tiptap/react": "^3.0.7",
    "@tiptap/starter-kit": "^3.0.7",
    "@types/lodash": "^4.17.20",
    "axios": "^1.11.0",
    "chrono-node": "^2.8.3",
    "concurrently": "^9.1.2",
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.536.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "cypress": "^14.5.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  }
}
